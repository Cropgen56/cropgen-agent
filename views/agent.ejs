<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CropGen Chatbot</title>
    <style>
      body {
        font-family: "Segoe UI", Arial, sans-serif;
        background: #f0f2f5;
        margin: 0;
        padding: 0;
      }

      /* Chat container */
      #chat {
        width: 100%;
        max-width: 700px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        height: 80vh;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      }

      /* Header */
      #chat header {
        padding: 16px 20px;
        background: #2f6b10;
        color: #fff;
        border-radius: 12px 12px 0 0;
        font-size: 18px;
        font-weight: 600;
      }

      /* Messages list */
      #messages {
        list-style-type: none;
        padding: 20px;
        margin: 0;
        flex: 1;
        overflow-y: auto;
        background: #f9fafb;
      }

      #messages li {
        margin: 10px 0;
        max-width: 75%;
        padding: 10px 14px;
        border-radius: 18px;
        line-height: 1.4;
        font-size: 15px;
        word-wrap: break-word;
      }

      /* User messages */
      .user {
        background: #d1e7dd;
        color: #0f5132;
        margin-left: auto;
        border-bottom-right-radius: 4px;
      }

      /* Bot messages */
      .bot {
        background: #f8d7da;
        color: #842029;
        margin-right: auto;
        border-bottom-left-radius: 4px;
      }

      /* Form */
      #form {
        display: flex;
        padding: 16px;
        border-top: 1px solid #eee;
        background: #fff;
        border-radius: 0 0 12px 12px;
      }

      #input {
        flex: 1;
        padding: 12px 14px;
        border: 1px solid #ccc;
        border-radius: 20px;
        outline: none;
        font-size: 15px;
      }

      #send {
        margin-left: 10px;
        padding: 12px 18px;
        border: none;
        border-radius: 20px;
        background: #2f6b10;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s ease;
      }

      #send:hover {
        background: #24500c;
      }
    </style>
  </head>
  <body>
    <div id="chat">
      <header>ðŸ¤– CropGen Chatbot</header>
      <ul id="messages"></ul>
      <form id="form">
        <input id="input" autocomplete="off" placeholder="Type a message..." />
        <button id="send">Send</button>
      </form>
    </div>

    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <script>
      const socket = io("http://localhost:3002");

      const form = document.getElementById("form");
      const input = document.getElementById("input");
      const messages = document.getElementById("messages");

      // send message
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        if (input.value.trim()) {
          const msg = input.value;
          appendMessage("user", msg);
          socket.emit("user_message", msg);
          input.value = "";
        }
      });

      // receive bot response
      socket.on("ai_response", function (msg) {
        appendMessage("bot", msg);
      });

      // append message helper
      function appendMessage(sender, text) {
        const item = document.createElement("li");
        item.className = sender;
        item.textContent = text;
        messages.appendChild(item);
        messages.scrollTop = messages.scrollHeight;
      }
    </script>
  </body>
</html>
